<?xml version="1.0" encoding="utf-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    style="@style/Transparent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:alpha="0.4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/txtAtencion"
                    android:layout_marginTop="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/atenci_n"
                    android:background="@color/red"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:padding="5dp" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:padding="3dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/imagen"
                    android:contentDescription="@string/imagen_cabecera_dialogo"
                    android:elevation="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/error_ex"

                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/linearButtonsDialog"
                android:background="@color/white"
                android:padding="20dp">

                <TextView

                    android:id="@+id/tituloCustom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:text="@string/alert_dialog_buttons_tituloCustom_text"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>

